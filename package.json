{
  "name": "@luudoanh/react-native-reanimated-dnd",
  "version": "1.3.0",
  "description": "A powerful drag-and-drop library for React Native using Reanimated 4 - Updated for compatibility",
  "main": "lib/index.js",
  "module": "lib/index.js",
  "types": "lib/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "import": "./lib/index.js",
      "default": "./lib/index.js"
    }
  },
  "sideEffects": false,
  "scripts": {
    "build": "tsc && npm run minify",
    "build:safe": "tsc",
    "build:clean": "rm -rf lib && npm run build",
    "build:clean:safe": "rm -rf lib && npm run build:safe",
    "minify": "node scripts/build.js",
    "sync:external-lib": "node scripts/sync-external-lib.js",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,yml,yaml}\" --ignore-path .prettierignore",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md,yml,yaml}\" --ignore-path .prettierignore"
  },
  "keywords": [
    "react-native",
    "drag-and-drop",
    "reanimated",
    "sortable",
    "dnd",
    "gesture-handler"
  ],
  "author": "luudoanh (forked from Vishesh Raheja)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luudoanh/react-native-reanimated-dnd.git"
  },
  "homepage": "https://github.com/luudoanh/react-native-reanimated-dnd",
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-native": ">=0.60.0",
    "react-native-gesture-handler": ">=2.0.0",
    "react-native-reanimated": ">=4.0.0",
    "react-native-worklets": ">=0.6.1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "~19.1.10",
    "@types/react-native": "^0.72.0",
    "prettier": "^3.5.3",
    "react": "19.1.0",
    "react-native": "^0.81.0",
    "react-native-gesture-handler": "~2.28.0",
    "react-native-reanimated": "^4.0.0",
    "react-native-worklets": "^0.6.1",
    "terser": "^5.36.0",
    "typescript": "~5.9.2"
  },
  "files": [
    "lib/**/*.js",
    "lib/**/*.d.ts",
    "README.md",
    "LICENSE"
  ]
}
